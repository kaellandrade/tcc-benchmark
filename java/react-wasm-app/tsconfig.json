{
  "compilerOptions": {
    "target": "es6", // Compila para uma versão moderna do JS
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true, // Permite que arquivos .js e .ts coexistam no projeto
    "skipLibCheck": true, // Pula a verificação de tipos em arquivos de declaração (.d.ts)
    "esModuleInterop": true, // Melhora a interoperabilidade entre módulos CommonJS e ES
    "allowSyntheticDefaultImports": true,
    "strict": true, // Habilita todas as checagens estritas de tipos (altamente recomendado!)
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true, // O CRA cuida da transpilação, o TS só faz a checagem de tipos
    "jsx": "react-jsx" // Habilita o novo JSX Transform do React
  },
  "include": [
    "src" // Diz ao TypeScript para verificar apenas os arquivos dentro da pasta 'src'
  ]
}